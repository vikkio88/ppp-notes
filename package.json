{
  "name": "ppp-astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "bunx --bun astro dev",
    "build": "bunx --bun astro build",
    "preview": "bunx --bun astro preview",
    "astro": "bunx --bun astro",
    "build:clean": "bun src/scripts/clean.ts",
    "data:dump": "bun src/scripts/parse.ts",
    "update:website": "bun build:clean && bun run build && bun site:deploy",
    "site:deploy": "bunx surge dist --domain ppp-notes.surge.sh",
    "update:data": "bun src/scripts/update-data.ts"
  },
  "dependencies": {
    "@ascorbic/feed-loader": "^1.0.4",
    "@astrojs/react": "4.4.2",
    "@astrojs/svelte": "^7.2.5",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "astro": "5.16.5",
    "date-fns": "^4.1.0",
    "feedparser": "^2.2.10",
    "fuse.js": "^7.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "svelte": "^5.46.4",
    "ulid": "^3.0.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/feedparser": "^2.2.8"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
